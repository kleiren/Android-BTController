<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    android:background="@color/colorPrimary"

    android:orientation="vertical">

    <ImageView

        android:id="@+id/imageView2"
        android:layout_width="100000dp"
        android:background="@color/colorPrimaryDark"

        android:layout_height="100000dp"
        android:layout_alignParentEnd="true"
        android:rotation="-30"
        android:translationX="-100dp"
        android:translationY="-100dp"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/main_btnLogin"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:drawableTop="@drawable/ic_computer_black_48dp"
        android:paddingTop="30sp"
        android:paddingBottom="50sp"
        android:background="@drawable/btn_login_states"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"

        android:shadowRadius="50"
        android:text="Terminal"
        android:textSize="20sp"
        android:layout_below="@+id/imageView"
        android:layout_toLeftOf="@+id/fragment_loading_spinner"
        android:layout_toStartOf="@+id/fragment_loading_spinner" />


    <Button
        android:id="@+id/main_btnController"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:drawableTop="@drawable/ic_videogame_asset_black_48dp"
        android:paddingTop="30sp"
        android:paddingBottom="50sp"
        android:background="@drawable/btn_login_states"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"

        android:shadowDy="0"

        android:shadowRadius="50"
        android:text="Controller"
        android:textSize="20sp"
        android:layout_alignTop="@+id/main_btnLogin"
        android:layout_toRightOf="@+id/fragment_loading_spinner"
        android:layout_toEndOf="@+id/fragment_loading_spinner" />


    <TextView
        android:id="@+id/menu_btStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:src="@mipmap/ic_launcher" />

    <ProgressBar android:id="@+id/fragment_loading_spinner"
        style="?android:progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="61dp"
        android:layout_alignTop="@+id/main_btnLogin"
        android:layout_centerHorizontal="true" />

</RelativeLayout>